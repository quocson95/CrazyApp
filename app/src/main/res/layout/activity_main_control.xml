<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.quocs.crazyapp.MainControl">

    <Button
        android:id="@+id/btn_left"
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:text=""
        android:background="@drawable/up"
        android:layout_alignBottom="@+id/tgg_voice"
        android:layout_toEndOf="@+id/tgg_voice"
        android:layout_marginStart="38dp" />

    <Button
        android:id="@+id/btn_right"
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:background="@drawable/up"
        android:text=""
        android:layout_alignBaseline="@+id/btn_left"
        android:layout_alignBottom="@+id/btn_left"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="280dp"/>
    <Button
        android:id="@+id/btn_up"
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:text=""
        android:background="@drawable/up"
        android:layout_marginStart="22dp"
        android:layout_above="@+id/tgg_voice"
        android:layout_alignParentStart="true" />
    <Button
        android:id="@+id/btn_down"
        android:background="@drawable/up"
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:text=""
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/btn_up"
        android:layout_marginBottom="16dp" />

    <ToggleButton
        android:id="@+id/tgg_voice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/icovoice"
        android:text="VOICE"
        android:textOff=" "
        android:textOn=" "
        android:layout_above="@+id/radio_voice"
        android:layout_centerHorizontal="true" />

    <RadioButton
        android:id="@+id/radio_voice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" "
        android:layout_alignBottom="@+id/btn_down"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/txt_view"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:text=" "
       />

    <TextView
        android:id="@+id/txt_voice"
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:layout_marginLeft="340dp"
        android:text=" "/>
</RelativeLayout>
